<?php
/**
 * @file
 * Install file for the SamfundsLitteratur installation profile.
 */

/* --- HOOKS ---------------------------------------------------------------- */

/**
 * Implementation of hook_install().
 */
function sl_install() {
  theme_enable(array('mox', 'seven'));

  $variables = array(
    'admin_theme' => 'seven',
    'configurable_timezones' => 0,
    'date_first_day' => 1,
    'date_format_long' => 'l, j. F Y - G:i',
    'date_format_medium' => 'D, d/m/Y - H:i',
    'date_format_short' => 'd/m/Y - H:i',
    'node_admin_theme' => 1,
  );
  foreach ($variables as $key => $variable) {
    variable_set($key, $variable);
  }

  theme_disable(array('bartik'));
}
